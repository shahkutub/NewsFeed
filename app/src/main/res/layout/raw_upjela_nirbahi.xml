<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/layNews"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim170"
        android:background="@drawable/conversation_screen_holder"
        >
        <TextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#0D7CE4"
            android:textSize="20sp"
            android:layout_margin="@dimen/dim5"
            android:gravity="center"
            android:layout_alignParentTop="true"

            />

        <TextView
            android:id="@+id/tvNewsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="15sp"
            android:maxLines="3"
            android:padding="@dimen/dim5"
            android:layout_margin="@dimen/dim5"
            android:layout_below="@+id/tvNewsTitle"
            android:gravity="center"
            />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim15"
        android:layout_alignParentBottom="true"
        >

        <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author:Admin"
        android:textColor="#5DA327"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#5DA327"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            />
    </RelativeLayout>

    </RelativeLayout>

</LinearLayout>